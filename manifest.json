{
  "name": "Copy Keeper",
  "description": "Cliboard",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage", "contextMenus", "tabs", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": ["scripts/content.js"],
    "matches": ["*://*/*"]
  }]
}
